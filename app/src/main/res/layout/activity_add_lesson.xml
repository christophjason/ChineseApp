<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddLessonActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Lesson Cover" />

            <com.jackandphantom.circularimageview.RoundedImage
                android:id="@+id/img_lesson"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="17dp"
                android:src="@drawable/ic_add_a_photo_black_24dp" />

            <EditText
                android:id="@+id/edtlesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Add Lesson"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Words Image" />

                    <com.jackandphantom.circularimageview.RoundedImage
                        android:id="@+id/img_words"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="17dp"
                        android:src="@drawable/ic_add_a_photo_black_24dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Voice Words" />

                    <com.jackandphantom.circularimageview.RoundedImage
                        android:id="@+id/img_voice_word"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="17dp"
                        android:src="@drawable/ic_keyboard_voice_black_24dp" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/edtChinesewords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Input Chinese words"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtenglishwords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Input English words"
                android:inputType="textPersonName" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="6dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Conversation Words" />

                <com.jackandphantom.circularimageview.RoundedImage
                    android:id="@+id/img_voice_conversation"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="17dp"
                    android:src="@drawable/ic_keyboard_voice_black_24dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/edtChinese_conversation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Input Chinese Conversation"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtenglishwords1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Input english conversation words"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtquestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Input question"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edtCorrect_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Input Correct answers"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AEAFB1"
                android:text="Button"
                />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>